<?xml version="1.0" encoding="UTF-8"?><Configuration>
  <Properties>
    <Property name="filename">C:\Users\rodri\.prosysopc\prosys-opc-ua-simulation-server\log</Property>
    <Property name="appname">simulationserver</Property>
  </Properties>
  <Appenders>
    <Console name="console">
      <PatternLayout pattern="%d{MM/dd/yyyy HH:mm:ss.SSS} %-5p [%t] %47c %3x - %m%n"/>
    </Console>
    <RollingFile name="file" fileName="${filename}/${appname}.log" filePattern="${filename}/$${date:yyyy-MM}/${appname}-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout pattern="%d{MM/dd/yyyy HH:mm:ss.SSS} %-5p [%t] %47c %3x - %m%n"/>
      <Policies>
        <OnStartupTriggeringPolicy/>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="50 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="50"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="console"/>
      <AppenderRef ref="file"/>
    </Root>
  </Loggers>
</Configuration>
